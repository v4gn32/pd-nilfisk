# Porta padrão do servidor Express
PORT=3000

# URL de conexão com o banco de dados PostgreSQL (ajuste com seu usuário/senha/banco)
DATABASE_URL="postgresql://usuario:senha@localhost:5432/nomedobanco?schema=public"

# Chave secreta usada para assinar tokens JWT
JWT_SECRET="sua_chave_secreta_segura"

# (opcional) Tempo de expiração do token JWT
JWT_EXPIRES_IN="7d"
